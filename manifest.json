{
  "manifest_version": 3,
  "name": "WP Snitch",
  "version": "1.0",
  "description": "This extension informs you if the site you are looking at runs on WordPress.",
  "icons": {
    "48": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [ "webNavigation", "tabs"],
  "host_permissions": [ "*://*/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "24": "icons/icon.png",
      "32": "icons/icon.png"
    }
  }
}
